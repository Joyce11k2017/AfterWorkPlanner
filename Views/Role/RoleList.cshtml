@model IEnumerable<AfterWorkPlanner.Models.Role>

@{
    ViewBag.Title = "Role List";
}

<h2>Role List</h2>

<p>
    @Html.ActionLink("Create New", "RoleCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.user_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.role_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Create)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Delete)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.View)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.created_dt_tm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.modified_dt_tm)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.User.user_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.role_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Edit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Create)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Delete)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.View)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.created_dt_tm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.modified_dt_tm)
        </td>
        <td>
            @Html.ActionLink("Edit", "RoleEdit", new { id = item.role_id }) |
            @Html.ActionLink("Details", "RoleDetails", new { id = item.role_id }) |
            @Html.ActionLink("Delete", "RoleDelete", new { id = item.role_id })
        </td>
    </tr>
}

</table>
